    <!-- Header -->
    <header>
        <div class="container">
            <div class="intro-text">
                <div class="intro-lead-in">Welcome To Our</div>
                <div class="intro-heading">Exchange</div>
                <a href="#services" class="page-scroll btn btn-xl">Tell Me More</a>
            </div>
        </div>
    </header>

    <!-- Services Section -->
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Services</h2>
                    <h3 class="section-subheading text-muted">CCEX was created for you!</h3>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-shopping-cart fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Trading Platform</h4>
                    <p class="text-muted">We support the two most popular cryptocurrency.</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-laptop fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Simple Interface</h4>
                    <p class="text-muted">We give you friendly interface, easy to use.<br>In few steps we'll show you how to exchange, that you'll enjoy trading cryptocurrency!</p>
                </div>
                <div class="col-md-4">
                    <span class="fa-stack fa-4x">
                        <i class="fa fa-circle fa-stack-2x text-primary"></i>
                        <i class="fa fa-lock fa-stack-1x fa-inverse"></i>
                    </span>
                    <h4 class="service-heading">Web Security</h4>
                    <p class="text-muted">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Minima maxime quam architecto quo inventore harum ex magni, dicta impedit.</p>
                </div>
            </div>
        </div>
    </section>


    <!-- About Section -->
    <section id="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Step by step</h2>
                    <h3 class="section-subheading text-muted">How to use our cryptocurrency exchange.</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="timeline">
                        <li>
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="assets/about/1.jpg" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">

                                    <h4 class="subheading">STEP 1</h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted"><b>Choose your cryptocurrency,</b><br>that you want to exchange. Our exchange rates are included in the footer. Please, before you trade you must read and accept our terms!</p>
                                </div>
                            </div>
                        </li>
                        <li class="timeline-inverted">
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="assets/about/2.jpg" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">

                                    <h4 class="subheading">STEP 2</h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted"><b>Enter you address,</b><br>we need to know at what address do transfer your preferred cryptocurrency.</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="assets/about/3.jpg" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">

                                    <h4 class="subheading">STEP 3</h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted"><b>Make a transfer to our address.</b><br>Copy our address and send us the coins which you want to exchange. You have 48 hours to do it!</p>
                                </div>
                            </div>
                        </li>
                        <li class="timeline-inverted">
                            <div class="timeline-image">
                                <img class="img-circle img-responsive" src="assets/about/4.jpg" alt="">
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">

                                    <h4 class="subheading">STEP 4</h4>
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted"><b>Check your wallet,</b><br>we sent coins to your address. If you have any questions or some problems, click <b>contact</b>!</p>
                                </div>
                            </div>
                        </li>

                        <li class="timeline-inverted">
                            <div class="timeline-image">
                              <div id = "link_without_line">
                                <%= link_to "<h4>Click here<br>to make some COINS!</h4>".html_safe, new_transaction_request_path %>
                              </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Contact Us</h2>
                    <h3 class="section-subheading text-muted">We are here to help you!</h3>
                </div>
            </div>
            <div class="row">
              <div class="col-lg-12 text-center">
                  <br><br>
                  <h3 class="section-heading">support@ccex.com</h3>
                  <br>
              </div>
            </div>
        </div>
    </section>

